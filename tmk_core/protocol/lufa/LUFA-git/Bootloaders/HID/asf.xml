		<require idref="lufa.boards.dummy.avr8"/>
		<generator value="as5_8"/>

		<device-support value="at90usb1287"/>
		<config name="lufa.drivers.board.name" value="none"/>

		<config name="config.compiler.optimization.level" value="size"/>

